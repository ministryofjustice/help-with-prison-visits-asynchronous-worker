{
  "name": "help-with-prison-visits-asynchronous-worker",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/help-with-prison-visits-asynchronous-worker/"
  },
  "engines": {
    "node": "^24",
    "npm": "^11"
  },
  "scripts": {
    "build": "./build",
    "start-worker-tasks": "node start-worker-tasks.js",
    "start-daily-tasks": "node start-daily-tasks.js",
    "start-payment-run": "node start-payment-run.js",
    "start-daily-auto-approval-check": "node start-daily-auto-approval-check.js",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "test": "npm run lint && npm run test-unit",
    "test:ci": "jest --runInBand --coverage",
    "test-unit": "jest",
    "test-integration": "KNEX_CONFIG=testing mocha --recursive test/integration/ --timeout 15000 --exit",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --fix",
    "setup": "npm ci && hmpps-npm-script-run-allowlist"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.966.0",
    "applicationinsights": "^2.9.8",
    "axios": "^1.13.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "csv-stringify": "^6.6.0",
    "dotenv": "^17.2.3",
    "knex": "^3.1.0",
    "moment": "^2.30.1",
    "notifications-node-client": "8.2.1",
    "tedious": "^19.2.0",
    "xlsx-populate": "^1.21.0",
    "xml2js": "^0.6.2",
    "xml2js-xpath": "^0.13.0"
  },
  "devDependencies": {
    "@ministryofjustice/eslint-config-hmpps": "^1.0.2",
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.7"
  }
}
